% Command "maketitle":
\renewcommand*\maketitle[1][1]{%
    \begin{titlepage}
      \setcounter{page}{#1}%
      \let\footnotesize\small
      \let\footnoterule\relax
      \let\footnote\thanks
      \renewcommand*\thefootnote{\@fnsymbol\c@footnote}%
      \let\@oldmakefnmark\@makefnmark
      \renewcommand*{\@makefnmark}{\rlap\@oldmakefnmark}%
      \ifx\@extratitle\@empty \else
        \noindent\@extratitle\next@tpage\cleardoublepage
        \thispagestyle{empty}%
      \fi
      \setparsizes{\z@}{\z@}{\z@\@plus 1fil}\par@updaterelative
      \ifx\@titlehead\@empty \else
        \begin{minipage}[t]{\textwidth}%
        \@titlehead
        \end{minipage}\par
      \fi
      \null\vfill
        \ifx\@subject\@empty \else
          {\subject@font \@subject \par}%
          \vskip 3em
        \fi
        {\titlefont\huge \@title\par}%
        \vskip 3em
        {\Large \@publishers \par}%
        \vskip 4em
        {\Large  \@author }%
        \vskip \z@ \@plus1fill
        {\Large Winterthur, \@date \par}%
        \vskip 3em
     \par
      \@thanks
      \vfill\null
      \if@twoside\next@tpage
        \begin{minipage}[t]{\textwidth}
          \@uppertitleback
        \end{minipage}\par
        \vfill
        \begin{minipage}[b]{\textwidth}
          \@lowertitleback
        \end{minipage}
      \fi
      \ifx\@dedication\@empty \else
        \next@tpage\null\vfill
        {\centering \Large \@dedication \par}%
        \vskip \z@ \@plus3fill
        \if@twoside \next@tpage\cleardoublepage \fi
      \fi
    \ifthenelse{\boolean{idpstylefile@noaddress}}{
    }{
      \begin{minipage}[b][3cm][t]{0.6\textwidth}
        \textcolor{TitlePageGray}{
          Zürcher Hochschule für Angewandte Wissenschaften\\
          Institut für Datenanalyse und Prozessdesign\\
          Rosenstrasse 3\\
          Postfach\\
          8401 Winterthur
        }
      \end{minipage}
      \hfill
      \begin{minipage}[b][3cm][t]{0.35\textwidth}
      \begin{flushright}
        \textcolor{TitlePageGray}{
        \@email
      }
      \end{flushright}
      \end{minipage}    
    }  
    \end{titlepage}
    \setcounter{footnote}{0}%
